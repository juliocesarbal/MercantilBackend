// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Usuario - SIN SEGURIDAD, password en texto plano
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   // TEXTO PLANO - VULNERABILIDAD INTENCIONAL
  firstName String
  lastName  String
  createdAt DateTime @default(now())

  accounts  Account[]
  savedRecipients SavedRecipient[]
}

// Cuenta Bancaria
model Account {
  id            Int      @id @default(autoincrement())
  userId        Int
  accountNumber String   @unique
  balance       Float    @default(0)
  type          String   // 'Ahorros', 'Corriente', etc.
  alias         String?
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
  transactions  Transaction[]
}

// Transacción
model Transaction {
  id            Int      @id @default(autoincrement())
  accountId     Int
  targetAccount String
  amount        Float
  date          DateTime @default(now())
  description   String
  type          String   // 'Débito', 'Crédito'
  status        String   @default("Exitoso")

  account       Account  @relation(fields: [accountId], references: [id])
}

// Destinatarios guardados
model SavedRecipient {
  id            Int      @id @default(autoincrement())
  userId        Int
  accountNumber String
  alias         String
  bankName      String   @default("Banco Mercantil Santa Cruz")
  accountType   String   @default("Caja de Ahorro")
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
}
